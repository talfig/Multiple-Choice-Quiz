<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="QuizController">

    <children>
        <!-- Quiz Title -->
        <Text layoutX="180.0" layoutY="40.0" text="Multiple Choice Quiz">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <!-- Scrollable area for questions -->
        <ScrollPane fitToWidth="true" layoutX="0.0" layoutY="60.0" prefHeight="670.0" prefWidth="600.0">
            <content>
                <VBox fx:id="questionBox" prefHeight="200.0" prefWidth="100.0" />
            </content>
        </ScrollPane>

        <!-- Submit Button -->
        <Button layoutX="100.0" layoutY="740.0" onAction="#handleSubmit" prefHeight="40.0" prefWidth="160.0" text="Submit">
            <font>
                <Font name="Times New Roman Bold" size="18.0" />
            </font>
        </Button>
      <Button layoutX="335.0" layoutY="740.0" onAction="#handleReset" prefHeight="40.0" prefWidth="160.0" text="Reset">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
